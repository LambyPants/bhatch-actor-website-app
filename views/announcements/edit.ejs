<% include ../partials/header %>

<div class="row">
	<div class="col-lg-6 col-sm-offset-3">
		<h1>Edit Announcement</h1>
		<form action="/media/<%=announcement._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label>Announcement Text</label>
				<input type="text" value="<%= announcement.text %>" name="announcement[text]" class="form-control">
			</div>
			<button class="btn btn-primary">Update</button>
		</form>
	</div>
	
	<div class="row">
	<div class="col-sm-offset-3 col-lg-6">
		<div class="well well-lg">
			<ul>
			<li><h3>Add a hyperlink (note - the http:// is important!):</h3> <xmp><a href="https://www.example.com">Example Link</a></xmp></li>
			<li><h3>Add italics:</h3> <xmp><em>Place the text you want with italics between these tags</em></xmp></li>
			<li><h3>Add bold:</h3> <xmp><strong>Place the text you want to be bold between these tags</strong></xmp></li>
			</ul>
		</div>
	</div>
</div>
</div>

<% include ../partials/footer %>