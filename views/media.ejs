<div id="media">
 
    <div class="media-header">
    <div class="row">
        <div class="col-lg-12">
       <div class="media-and-work">
            <h1>Media + Work</h1>
        </div>
        </div>
    </div>
    <div class="scroll-container">
        <h3>Scroll Down</h3>
      <i class="fa fa-angle-double-down" aria-hidden="true"></i>

    </div>
    </div>

 <div class="container-fluid">
     
     <div class="row">
         <div class="col-lg-12">
             <h1>
                 Announcements / What I'm Up To
                 <hr>
             </h1>
               <% if(currentUser) {  %>
              <a href="/media/new" class="btn btn-primary btn-lg">New Announcement <i class="fa fa-bullhorn" aria-hidden="true"></i></a>
              <% } %>
         </div>
         <div class="col-lg-12">

             <ul class="list-group">
              <% announcement.reverse().forEach(function(announcement){ %>
                
                 <li class="list-group-item">
                     <%-announcement.text%>
           <% if(currentUser) {  %>
                  <a id="white-link" href="/media/<%=announcement._id%>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> 
             
                  <form class="inline-buttons" id="delete" action="/<%=announcement._id%>?_method=DELETE" method="POST">
                      <button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                  </form>
             <% } %>
                  </li>  
                 <% }); %>
             </ul>
         </div>
     </div>
    <div class="row">
        <div class="col-lg-12">
             <h1>
                 Photos / Previous Productions
                 <hr>
             </h1>
               <% if(currentUser) {  %>
        <a href="/media/photos/new" class="btn btn-primary btn-lg">New Photo <i class="fa fa-file-image-o" aria-hidden="true"></i></a> 
        <% } %>
        </div>
            <% photo.reverse().forEach(function(photo, i){ %>
      	<div class="col-lg-3 col-md-4 col-sm-6">
			<a title="<%=photo.title%>" class="sameHeight"  href="#">
				<img class="thumbnail img-responsive " id='<%=i%>' src="<%=photo.link%>">
			</a>
			  <% if(currentUser) {  %>
   <span class="carousel-buttons">
			   <a href="/media/photos/<%=photo._id%>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> 
			 
                <form class="inline-buttons" id="delete" action="/photos/<%=photo._id%>?_method=DELETE" method="POST">
                      <button class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                </form>
       </span>      
       <% } %>
		</div>
		<% }); %>

    </div>
