<% include ../partials/header %>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Edit Photo</h1>
		<form action="/media/photos/<%=photo._id%>?_method=PUT" method="POST">
		 <div class="form-group">
				<label>Photo Description</label>
				<input type="text" value="<%=photo.title %>" name="photo[title]" class="form-control">
			</div>
			<div class="form-group">
				<label>Photo URL</label>
				<input type="text" value="<%= photo.link %>" name="photo[link]" class="form-control">
			</div>
			<button class="btn btn-primary">Update</button>
		</form>
	</div>
</div>

<% include ../partials/footer %>