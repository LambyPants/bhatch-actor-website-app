<% include ../partials/header %>
<div class="container overflow">
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Edit Photo</h1>
		<form action="/media/photos/<%=photo._id%>?_method=PUT" method="POST">
		 <div class="form-group">
				<label>Photo Description</label>
				<input type="text" value="<%=photo.title %>" name="photo[title]" class="form-control">
			</div>
			<div class="form-group">
				<label>Photo URL</label>
				<input type="text" value="<%= photo.link %>" name="photo[link]" class="form-control">
			</div>
			<button class="btn btn-primary">Update</button>
		</form>
		</div>
	</div>
	div class="row">
	<div class="col-sm-offset-3 col-lg-6">
		<div class="well well-lg">
			<ul>
			<li><h3>Add IMAGE hyperlink (note - the https:// is important!):</h3> <xmp>https://www.example.com</xmp></li>
			<li><h3>Add italics:</h3> <xmp><em>Place the text you want with italics between these tags</em></xmp></li>
			<li><h3>Add bold:</h3> <xmp><strong>Place the text you want to be bold between these tags</strong></xmp></li>
			</ul>
		</div>
	</div>
</div>
</div>

<% include ../partials/footer %>